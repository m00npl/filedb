{
  "name": "filesdb",
  "version": "1.0.0",
  "description": "File chunking service for Arkiv",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "dev": "bun run --hot src/server.ts",
    "build": "bun build src/server.ts --outdir=dist --target=bun",
    "start": "bun run dist/server.js",
    "test": "bun test",
    "test:smoke": "bun test tests/smoke",
    "test:smoke:local": "TEST_BASE_URL=http://localhost:3003 bun test tests/smoke",
    "test:smoke:production": "TEST_BASE_URL=https://filedb.online bun test tests/smoke"
  },
  "dependencies": {
    "@arkiv-network/sdk": "^0.5.0",
    "@hono/node-server": "^1.12.0",
    "@sentry/node": "^10.22.0",
    "@types/jsonwebtoken": "^9.0.10",
    "crypto": "^1.0.1",
    "file-type": "^21.0.0",
    "hono": "^4.6.3",
    "jsonwebtoken": "^9.0.2",
    "redis": "^5.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@types/bun": "latest",
    "bun-types": "latest",
    "typescript": "^5.9.3"
  }
}
